<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.quiz.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_quizFragment"
            app:destination="@id/quizFragment"
            app:enterAnim="@anim/from_right_anim"
            app:exitAnim="@anim/to_left_anim"
            app:popEnterAnim="@anim/from_left_anim"
            app:popExitAnim="@anim/to_right_anim" />
    </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.quiz.QuizFragment"
        android:label="fragment_quiz"
        tools:layout="@layout/fragment_quiz" >
        <action
            android:id="@+id/action_quizFragment_to_resultFragment"
            app:destination="@id/resultFragment"
            app:popUpTo="@id/welcomeFragment"
            app:enterAnim="@anim/from_right_anim"
            app:exitAnim="@anim/to_left_anim"
            app:popEnterAnim="@anim/from_left_anim"
            app:popExitAnim="@anim/to_right_anim"/>
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.quiz.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" >
        <action
            android:id="@+id/action_resultFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/welcomeFragment"
            app:enterAnim="@anim/from_right_anim"
            app:exitAnim="@anim/to_left_anim"
            app:popEnterAnim="@anim/from_left_anim"
            app:popExitAnim="@anim/to_right_anim"/>
        <argument
            android:name="result"
            app:argType="string" />
        <action
            android:id="@+id/action_resultFragment_to_quizFragment"
            app:destination="@id/quizFragment"
            app:popUpTo="@id/welcomeFragment"
            app:enterAnim="@anim/from_right_anim"
            app:exitAnim="@anim/to_left_anim"
            app:popEnterAnim="@anim/from_left_anim"
            app:popExitAnim="@anim/to_right_anim"/>
    </fragment>
</navigation>