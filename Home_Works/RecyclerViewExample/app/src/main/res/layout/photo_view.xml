<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="210sp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/black_line"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="@color/black_transp"
            app:layout_constraintBottom_toBottomOf="@id/photo" />

        <TextView
            android:id="@+id/rover_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rover"
            android:textColor="@color/white"
            android:layout_marginLeft="10sp"
            app:layout_constraintTop_toTopOf="@id/black_line"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/camera_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/camera"
            android:textColor="@color/white"
            android:layout_marginLeft="10sp"
            app:layout_constraintBottom_toBottomOf="@id/black_line"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/sol_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sol"
            android:textColor="@color/white"
            android:layout_marginRight="10sp"
            app:layout_constraintTop_toTopOf="@id/black_line"
            app:layout_constraintEnd_toEndOf="@id/black_line"/>

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textColor="@color/white"
            android:layout_marginRight="10sp"
            app:layout_constraintBottom_toBottomOf="@id/black_line"
            app:layout_constraintEnd_toEndOf="@id/black_line"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
