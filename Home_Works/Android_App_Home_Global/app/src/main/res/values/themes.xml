<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/nude</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.App" parent="Base.Theme.App" />

    <style name="Theme.App.Buttons" parent="@style/Widget.Material3.Button">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Theme.App.Question">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.App.Text" parent="@style/TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/opensans_regular</item>
    </style>


</resources>